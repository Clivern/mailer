{
   "$id":"createMessageAction",
   "$schema":"http://json-schema.org/draft-07/schema#",
   "description":"Create Message Action",
   "type":"object",
   "properties":{
      "subject":{
         "type":"string",
         "description":"The message subject",
         "minLength":1,
         "maxLength":100
      },
      "to":{
         "type":"array",
         "minItems":1,
         "items":{
            "type":"object",
            "properties":{
               "email":{
                  "id":"email",
                  "type":"string",
                  "description":"The receiver email address",
                  "minLength":1,
                  "maxLength":60
               },
               "name":{
                  "id":"name",
                  "type":"string",
                  "description":"The receiver name",
                  "maxLength":60
               }
            },
            "required":[
               "email",
               "name"
            ]
         }
      },
      "from":{
         "type":"object",
         "properties":{
            "email":{
               "id":"email",
               "type":"string",
               "description":"The sender email address",
               "minLength":1,
               "maxLength":60
            },
            "name":{
               "id":"name",
               "type":"string",
               "description":"The sender name",
               "maxLength":60
            }
         },
         "required":[
            "email"
         ]
      },
      "content":{
         "type":"object",
         "properties":{
            "type":{
               "id":"type",
               "type":"string",
               "description":"The message type",
               "enum":[
                  "text/html",
                  "text/plain"
               ]
            },
            "value":{
               "id":"name",
               "type":"string",
               "description":"The message value",
               "minLength":1,
               "maxLength":10000
            }
         },
         "required":[
            "value", "type"
         ]
      }
   },
   "required":[
      "subject",
      "to",
      "from",
      "content"
   ]
}